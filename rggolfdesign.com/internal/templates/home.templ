package templates

import (
	"github.com/jjenkins/usds/internal/templates/layouts"
)

templ GolfHome() {
	@layouts.GolfBase("RG Golf Design - Premium Golf Simulators") {
		<!-- Hero Section -->
		<section class="hero-section">
			<div class="hero-content">
				<div class="hero-text-container">
					<span class="hero-eyebrow">RG Golf Design</span>
					<h1 class="hero-title">
						Your Private
						<span class="hero-title-accent">Golf Sanctuary</span>
					</h1>
					<p class="hero-description">
						Transform your space into an exclusive golf experience.
						Precision-engineered simulators, expertly installed,
						meticulously crafted for discerning players.
					</p>
					<div class="hero-cta-group">
						<a href="#consultation" class="btn-primary">
							<span>Schedule Consultation</span>
							<svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
							</svg>
						</a>
						<a href="#gallery" class="btn-secondary">View Installations</a>
					</div>
				</div>
			</div>
			<div class="hero-image-container">
				<div class="hero-image-overlay"></div>
			</div>
			<div class="scroll-indicator">
				<span class="scroll-text">Discover More</span>
				<div class="scroll-line"></div>
			</div>
		</section>

		<!-- Philosophy Section -->
		<section class="philosophy-section">
			<div class="container-narrow">
				<div class="section-header-center">
					<span class="section-eyebrow">Our Philosophy</span>
					<h2 class="section-title">Precision Meets Elegance</h2>
				</div>
				<div class="philosophy-grid">
					<div class="philosophy-card">
						<div class="philosophy-number">01</div>
						<h3 class="philosophy-card-title">Bespoke Design</h3>
						<p class="philosophy-card-text">
							Every installation is tailored to your space, your aesthetic, and your game.
							We don't do cookie-cutter solutions.
						</p>
					</div>
					<div class="philosophy-card">
						<div class="philosophy-number">02</div>
						<h3 class="philosophy-card-title">White-Glove Service</h3>
						<p class="philosophy-card-text">
							From initial consultation to final calibration, we handle every detail
							with meticulous care and professional expertise.
						</p>
					</div>
					<div class="philosophy-card">
						<div class="philosophy-number">03</div>
						<h3 class="philosophy-card-title">Premium Technology</h3>
						<p class="philosophy-card-text">
							Industry-leading simulators featuring the most accurate ball tracking,
							stunning graphics, and seamless performance.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="services-section">
			<div class="container">
				<div class="services-grid">
					<div class="service-card service-card-large">
						<div class="service-card-inner">
							<span class="service-badge">Signature Service</span>
							<h3 class="service-title">Complete Installation</h3>
							<p class="service-description">
								End-to-end simulator installation including space assessment,
								custom enclosure design, professional mounting, calibration,
								and comprehensive training. Turnkey excellence.
							</p>
							<ul class="service-features">
								<li class="service-feature">
									<svg class="feature-check" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
									</svg>
									<span>On-site space evaluation & design</span>
								</li>
								<li class="service-feature">
									<svg class="feature-check" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
									</svg>
									<span>Premium equipment installation</span>
								</li>
								<li class="service-feature">
									<svg class="feature-check" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
									</svg>
									<span>Precision calibration & testing</span>
								</li>
								<li class="service-feature">
									<svg class="feature-check" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
									</svg>
									<span>Personalized training session</span>
								</li>
