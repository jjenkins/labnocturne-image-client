package templates

import "github.com/jjenkins/labnocturne/flex/internal/templates/layouts"

templ OnboardingMonetization() {
	@layouts.Base("Monetization Methods") {
		<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-white p-4">
			<div class="w-full max-w-2xl">
				<!-- Back Button -->
				<button class="mb-8 text-teal-600 hover:text-teal-700 flex items-center gap-2 font-medium">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
					back
				</button>

				<!-- Progress Bar -->
				<div class="mb-12 flex gap-2">
					<div class="h-1 flex-1 bg-teal-500 rounded-full"></div>
					<div class="h-1 flex-1 bg-teal-500 rounded-full"></div>
				</div>

				<!-- Main Content -->
				<div class="space-y-10">
					<div class="space-y-3">
						<h1 class="text-5xl font-bold text-gray-900 leading-tight">How do you want to make money?</h1>
						<p class="text-gray-600 text-lg">Your answer will help us personalize your experience. Select up to 4 that apply.</p>
					</div>

					<!-- Monetization Grid -->
					<div class="grid grid-cols-2 gap-4">
						<button class="bg-white hover:bg-gray-50 border-2 border-gray-200 hover:border-teal-500 rounded-3xl p-6 transition-all duration-200 group">
							<div class="space-y-3 text-center">
								<div class="w-12 h-12 mx-auto bg-gradient-to-br from-orange-400 to-orange-500 rounded-2xl flex items-center justify-center">
